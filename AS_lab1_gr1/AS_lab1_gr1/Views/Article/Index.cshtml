@model IEnumerable<AS_lab1_gr1.Models.Article>

<h1>Artykuły</h1>

<div class="w3-card">
    <header class="w3-container w3-blue">
        <form asp-action="AddOrUpdate" asp-controller="Article" method="get">
            <button type="submit" class="w3-btn w3-green">Dodaj artykuł</button>
        </form>
    </header>
    <div class="w3-container">
        <ul>
            @foreach (var article in Model)
            {
                <li>
                    <h2>
                        @* <a href="@Url.Action("Details", "Article", new {id = article.ArticleId})">@article.Title</a> *@
                        <a asp-action="Details" asp-route-id="@article.ArticleId">@article.Title</a>
                        <form asp-action="AddOrUpdate" asp-controller="Article" asp-route-id="@article.ArticleId" method="get">
                            <button type="submit" class="w3-btn w3-green">Edytuj</button>
                        </form>
                        <form asp-action="Delete" asp-controller="Article" asp-route-id="@article.ArticleId" method="get">
                            <button type="submit" class="w3-btn w3-green">Usuń</button>
                        </form>
                    </h2>
                    <p>@article.Lead</p>
                    @article.CreationDate.ToShortDateString()
                </li>
            }
        </ul>
    </div>
</div>