@model IEnumerable<AS_lab1_gr1.Models.Category>

<h1>Kategorie</h1>

<div class="w3-card">
    <header class="w3-container w3-blue">
        <form asp-action="AddOrUpdate" asp-controller="Category" method="get">
            <button type="submit" class="w3-btn w3-green">Dodaj kategorię</button>
        </form>
    </header>

    <div class="w3-container">
        <ul>
            @foreach (var c in Model)
            {
                <li>
                    <h2>
                        <a asp-action="Details" asp-route-id="@c.CategoryId">@c.Name</a>
                        <form asp-action="AddOrUpdate" asp-controller="Category" asp-route-id="@c.CategoryId" method="get">
                            <button type="submit" class="w3-btn w3-green">Edytuj</button>
                        </form>
                        <form asp-action="Delete" asp-controller="Category" asp-route-id="@c.CategoryId" method="get">
                            <button type="submit" class="w3-btn w3-green">Usuń</button>
                        </form>
                    </h2>
                </li>
            }
        </ul>
    </div>

    <footer class="w3-container w3-blue">
    </footer>
</div>