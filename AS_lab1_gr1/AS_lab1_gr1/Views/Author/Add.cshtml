@model AS_lab1_gr1.Models.Author

<h1>Dodaj autora</h1>

<form asp-route="Add" method="post" class="w3-container">
	<p>
		<label asp-for="FirstName">Imię:</label>
		<textarea asp-for="FirstName" class="w3-input w3-border"></textarea>
	</p>
	<p>
		<label asp-for="LastName">Nazwisko:</label>
		<textarea asp-for="LastName" class="w3-input w3-border"></textarea>
	</p>
	<p>
		<button type="submit" class="w3-btn w3-border">Dodaj</button>
	</p>
</form>