@model AS_lab1_gr1.Models.Author

<form asp-action="AddOrUpdate" asp-controller="Author" asp-route-id="@Model.AuthorId" method="get">
	<button type="submit" class="w3-btn w3-green">Edytuj</button>
</form>
<form asp-action="Delete" asp-controller="Author" asp-route-id="@Model.AuthorId" method="get">
	<button type="submit" class="w3-btn w3-green">Usuń</button>
</form>
<h1>@(Model.FirstName + " " + Model.LastName)</h1>
@if (Model.Articles is not null)
{
	<ul>
		@foreach (var a in Model.Articles)
		{
			<li>
				<a asp-action="Details" asp-controller="Article" asp-route-id="@a.ArticleId">@a.Title</a>
			</li>
		}
	</ul>
}
